{% extends 'SIEBundle::main.html.twig' %}
{% block title %}Nuevo Usuario{% endblock %}
{% block contenido %}
	<h1>Nuevo Usuario</h1>
		{{ form_start(form) }}
		{{ form_errors(form) }}
	
			{{form_label(form.username)}}
			{{form_widget(form.username,{'attr':{'class': 'form-control'} })}}
			{% if form_errors(form.username) %}
				{{form_errors(form.username)}}
			{% endif %}
			
			{{form_label(form.password)}}
			{{form_errors(form.password)}}
			{{form_widget(form.password,{ 'full_name': 'pass','attr':{'class': 'form-control'} })}}
		
			{{form_label(form.email)}}
			{{form_widget(form.email,{'attr':{'class':'form-control'}})}}{{form_errors(form.email)}}
		
			{{form_label(form.isActive)}}
			{{form_errors(form.isActive)}}
			{{form_widget(form.isActive,{'attr':{'class':'form-control'}})}}
		
			{{form_label(form.roles)}}
			{{form_errors(form.roles)}}
			{{form_widget(form.roles,{'attr': {'class':'form-control'}})}}

			<input class="btn btn-default" type="submit">
		{{ form_row(form._token) }}
		{{ form_rest(form) }}
		{{ form_end(form) }}
{% endblock %}