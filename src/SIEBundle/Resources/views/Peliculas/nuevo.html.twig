{% extends 'SIEBundle::main.html.twig' %}
{% block title %}Nueva Pelicula{% endblock %}
{% block contenido %}
	{{ form_start(form) }}
	{{ form_errors(form) }}
		{{form_label(form.titulo)}}
		{{form_widget(form.titulo)}}
		{{form_errors(form.titulo)}}


		{{form_label(form.imagen,('URL de la Imagen'))}}
		{{form_widget(form.imagen)}}
		{{form_errors(form.imagen)}}

		{{form_label(form.descripcion)}}
		{{form_errors(form.descripcion)}}
		{{form_widget(form.descripcion,{'attr':{'class': 'form-control'}})}}

		{{form_label(form.duracion)}}
		{{form_errors(form.duracion)}}
		{{form_widget(form.duracion)}}
		
		{{form_label(form.categoria)}}
		{{form_errors(form.categoria)}}
		{{form_widget(form.categoria)}}

		{{form_label(form.estatus)}}
		{{form_errors(form.estatus)}}
		{{form_widget(form.estatus)}}

		<input class="btn btn-default" type="submit">
	{{ form_row(form._token) }}
	{{ form_rest(form) }}
	{{ form_end(form) }}
{% endblock %}